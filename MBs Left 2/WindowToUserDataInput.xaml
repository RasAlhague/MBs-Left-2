<Window x:Class="MBs_Left_2.WindowToUserDataInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowToUserDataInput" Height="95" Width="140" Topmost="True" WindowStyle="None" AllowsTransparency="True" Margin="0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <PasswordBox x:Name="TextBoxForUserPass" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="120" ToolTip="Password" Grid.ColumnSpan="2" Height="20"/>
        <TextBox x:Name="TextBoxForUserPhone" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="Phone number" Grid.ColumnSpan="2"/>
        <Button Content="Accept" Margin="10,63,0,0" Click="AcceptButton_Click" VerticalAlignment="Top" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="22" Width="50"/>
        <Button Content="Cancel" Margin="10,63,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1" Height="22" Width="50" Click="ButtonClose_Click"/>

    </Grid>
</Window>
